<div ng-controller="LoginController" class="margin-head">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-6 border-right">
                <img src="~/images/cover/banner-password.jpg" class="img-login" />
            </div>

            <div class="col-sm-6  margin-head">
                <div class="col-sm-10 font-login ">
                    Login
                </div>
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-envelope" aria-hidden="true" require></i></div>
                            </div>
                            <input type="email" class="form-control" ng-model="loginEmail"  disabled>
                        </div>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></div>
                            </div>
                            <input type="password" class="form-control" ng-model="password"  placeholder="Password" require>
                        </div>
                    </div>
                    <button class="btn btn-default width-button" ng-click="loginfunc(logintest,password)">Login</button>
                    <a href="#" class="font-forgetpassword float-right" ng-click="ForgetPassword()" >Forget Password</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/loginController.js"></script>
}