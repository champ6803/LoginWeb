@{
    ViewData["Title"] = "Home Page";
}

<div ng-controller="LoginController" class="margin-head">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-6 border-right">
                <img src="~/images/cover/banner-login.jpg" class="img-login" />
            </div>

            <div class="col-sm-6  margin-head">
                <div class="col-sm-10 font-login ">
                    Login
                </div>
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-user-tie"></i></div>
                            </div>
                            <input type="text" class="form-control" ng-model="loginForm.username" id="" placeholder="username">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fas fa-unlock-alt"></i></div>
                            </div>
                            <input type="password" class="form-control" ng-model="loginForm.password" placeholder="password">
                        </div>
                    </div>

                    <button class="btn btn-default width-button" ng-click="login(loginForm)">Login</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="margin-bottom">

</div>
@section Scripts {
    <script src="~/js/loginController.js"></script>
}

