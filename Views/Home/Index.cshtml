@{
    ViewData["Title"] = "Home Page";
}

<div ng-controller="LoginController" class="margin-head">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-6 border-right">
                <img src="~/images/cover/banner-login.jpg" class="img-login" />
            </div>

            <div class="col-sm-6  margin-head">
                <div class="col-sm-10 font-login ">
                    Login
                </div>
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                            </div>
                            <input type="text" class="form-control" ng-model="loginForm.username" id="" placeholder="Email">
                        </div>
                    </div>
                    <button class="btn btn-default width-button" >Next</button>
                    <div class="line">
                        <span class="text-line">
                            New to G-ABLE Community
                        </span>
                    </div>
                    <button class="btn btn-default width-button-new-account font-create" >Create a new account</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/loginController.js"></script>
}

